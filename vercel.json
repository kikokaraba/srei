{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "app/api/cron/scrape-all/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/scrape-bazos/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/scrape-nehnutelnosti/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/batch-refresh/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/scrape-paginated/route.ts": {
      "maxDuration": 300
    },
    "app/api/v1/scraper/stealth/route.ts": {
      "maxDuration": 300
    },
    "app/api/test-browserless/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/scrape-paginated",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/batch-refresh",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/deduplicate",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/sync-data?type=market",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/check-nbs",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/sync-data?type=economic",
      "schedule": "0 8 1 * *"
    },
    {
      "path": "/api/cron/daily-stats",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/cleanup-stale",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/telegram-notifications",
      "schedule": "0 8,12,18 * * *"
    }
  ]
}
